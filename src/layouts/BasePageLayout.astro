---
const { title, description, image, imgTitle } = Astro.props;
import ImageHeader from "../components/ImageHeader.astro";
import BaseHead from '../components/BaseHead.astro';
import StickyMenu from '../components/StickyMenu.astro';
import MainFooter from '../components/MainFooter.astro';
import '../styles/global.css';
---
<!DOCTYPE html>
<html lang="es">
  <BaseHead title={title} description={description}/>
  <body>
    <StickyMenu class="stiky" />
    <ImageHeader imgName={image} title={imgTitle} />
    <main>
      <slot />
    </main>
    <div class="page-transition"></div>
    <footer>
      <MainFooter/>
    </footer>
    
    <script>
      import { 
        initScrollAnimations, 
        initButtonEffects, 
        initPageTransitions, 
        initHoverEffects, 
        initTextAnimations,
        initUnderlineAnimations
      } from '../scripts/animations.js';
      
      document.addEventListener('DOMContentLoaded', () => {
        // Marcar que JavaScript est√° habilitado
        document.body.classList.add('js-enabled');
        
        // Inicializar todas las animaciones
        try {
          initPageTransitions();
          initScrollAnimations();
          initButtonEffects();
          initHoverEffects();
          initTextAnimations();
          initUnderlineAnimations();
        } catch (error) {
          console.error('Error al inicializar animaciones:', error);
        }
      });
    </script>
  </body>
</html>
<style>
  .stiky {
    position: sticky;
    top: 0;
    z-index: 50;
  }
</style>