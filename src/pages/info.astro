---
import '../styles/global.css';
import BasePageLayout from '../layouts/BasePageLayout.astro';
import SectionTitle from '../components/SectionTitle.astro';
import CallToAction from '../components/CallToAction.astro';
---

<BasePageLayout
  title="Otras informaciones"
  description="Información útil sobre alojamientos, restaurantes y actividades en el Valle de Arbas"
  image="HeaderUbicaciones"
  imgTitle="Otras informaciones"
>
  <section>
    <SectionTitle 
      title="Guía práctica para participantes"
      subtitle="Todo lo que necesitas saber para disfrutar al máximo de tu experiencia en el Trail Valle de Arbas 2025: dónde dormir, comer y qué hacer antes o después de la carrera."
    />

    <article class="pt-10 w-[90%] mx-auto max-w-300 mb-20">
