---
import '../../styles/global.css';
import BasePageLayout from '../../layouts/BasePageLayout.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const newsEntries = await getCollection('noticias');
  return newsEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

// Definir el tipo para la propiedad entry
interface Props {
  entry: CollectionEntry<'noticias'>;
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// Formato de fecha
const formattedDate = new Intl.DateTimeFormat('es-ES', { 
  day: 'numeric', 
  month: 'long', 
  year: 'numeric' 
}).format(entry.data.pubDate);
---

<BasePageLayout
  title={`${entry.data.title} | Trail Valle de Arbas`}
  description={entry.data.description}
  image="HeaderUbicaciones"
  imgTitle={entry.data.title}
>
  <article class="py-8 px-4">
    <div class="max-w-[900px] mx-auto">
      <div class="mb-8">
        <a href="/noticias" class="text-[#f97316] hover:text-[#e49a69] inline-flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Volver a noticias
        </a>
      </div>
      
      <div class="news-meta mb-4">
        <span class="text-sm text-gray-500">{formattedDate}</span>
        {entry.data.author && 
          <span class="text-sm text-gray-500 ml-4">Por: {entry.data.author}</span>
        }
      </div>
      
      {entry.data.image && (
        <div class="featured-image-container mb-8">
          <img 
            src={entry.data.image} 
            alt={entry.data.imageAlt || entry.data.title} 
            class="w-full h-auto rounded-lg shadow-md"
          />
          {entry.data.imageAlt && 
            <figcaption class="text-sm text-gray-600 mt-2 text-center">{entry.data.imageAlt}</figcaption>
          }
        </div>
      )}
      
      <div class="prose prose-lg mx-auto">
        <Content />
      </div>
      
      <div class="mt-12 pt-8 border-t border-gray-200">
        <div class="flex justify-between items-center">
          <a href="/noticias" class="text-[#f97316] hover:text-[#e49a69] inline-flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Ver todas las noticias
          </a>
          
          <div class="flex gap-4">
            <a href="#" title="Compartir en Facebook" class="text-gray-600 hover:text-blue-600">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
