---
import '../styles/global.css';
import '../styles/pastEditions.css';
import BasePageLayout from '../layouts/BasePageLayout.astro';
import ResultsCard from '../components/results/ResultsCard.astro';
import CategoryResults from '../components/results/CategoryResults.astro';
import RunnerItem from '../components/results/RunnerItem.astro';
import RecordBox from '../components/results/RecordBox.astro';
import ResultsLink from '../components/results/ResultsLink.astro';
import CallToAction from '../components/CallToAction.astro';
import SectionTitle from '../components/SectionTitle.astro';
---

<BasePageLayout
  title="Resultados y Fotos"
  description="Resultados, récords y fotos del Trail Valle de Arbas"
  image="HeaderResultados"
  imgTitle="Resultados y Fotos"
>
  <section>
    <SectionTitle 
      title="Resultados Edición 2025"
      subtitle="Consulta los resultados completos de la edición 2025 del Trail Valle de Arbas, récords de las diferentes distancias y las galerías fotográficas del evento."
    />

    <article class="pt-10 w-[90%] mx-auto max-w-[1200px]">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Trail Arbas Infinito -->
        <ResultsCard title="Trail Arbas Infinito">
          <CategoryResults categoryName="Categoría Masculina">
            <RunnerItem position={1} name="Alejandro Martínez" time="3h 14m 27s" />
            <RunnerItem position={2} name="Carlos Rodríguez" time="3h 18m 05s" />
            <RunnerItem position={3} name="David López" time="3h 25m 42s" />
            <RunnerItem position={4} name="Sergio González" time="3h 27m 13s" />
            <RunnerItem position={5} name="Javier Fernández" time="3h 30m 58s" />
          </CategoryResults>
          
          <CategoryResults categoryName="Categoría Femenina">
            <RunnerItem position={1} name="Lucía García" time="3h 42m 18s" />
            <RunnerItem position={2} name="María Pérez" time="3h 50m 24s" />
            <RunnerItem position={3} name="Sara Alonso" time="3h 55m 09s" />
            <RunnerItem position={4} name="Andrea Sánchez" time="4h 01m 37s" />
            <RunnerItem position={5} name="Carmen Martín" time="4h 08m 45s" />
          </CategoryResults>
          
          <RecordBox 
            maleRecord={{ name: "Pedro Gómez", time: "3h 10m 22s", year: "2024" }}
            femaleRecord={{ name: "Lucía García", time: "3h 42m 18s", year: "2025" }}
          />
          
          <ResultsLink />
        </ResultsCard>
        
        <!-- Trail Arbas-Luna -->
        <ResultsCard title="Trail Arbas-Luna">
          <CategoryResults categoryName="Categoría Masculina">
            <RunnerItem position={1} name="Miguel Torres" time="1h 22m 15s" />
            <RunnerItem position={2} name="Iván Sánchez" time="1h 24m 42s" />
            <RunnerItem position={3} name="Pablo Ruiz" time="1h 27m 03s" />
            <RunnerItem position={4} name="Adrián Castro" time="1h 29m 18s" />
            <RunnerItem position={5} name="Jorge Blanco" time="1h 31m 40s" />
          </CategoryResults>
          
          <CategoryResults categoryName="Categoría Femenina">
            <RunnerItem position={1} name="Elena Martínez" time="1h 38m 22s" />
            <RunnerItem position={2} name="Laura Fernández" time="1h 41m 05s" />
            <RunnerItem position={3} name="Cristina López" time="1h 44m 31s" />
            <RunnerItem position={4} name="Marta Rodríguez" time="1h 47m 59s" />
            <RunnerItem position={5} name="Silvia Vázquez" time="1h 50m 27s" />
          </CategoryResults>
          
          <RecordBox 
            maleRecord={{ name: "Miguel Torres", time: "1h 22m 15s", year: "2025" }}
            femaleRecord={{ name: "Ana Díaz", time: "1h 35m 08s", year: "2024" }}
          />
          
          <ResultsLink />
        </ResultsCard>
      </div>

      <div class="mt-12 grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Trail Sierra del Alceo -->
        <ResultsCard title="Trail Sierra del Alceo">
          <CategoryResults categoryName="Categoría Cadete Masculino">
            <RunnerItem position={1} name="Daniel García" time="45m 33s" />
            <RunnerItem position={2} name="Hugo Pérez" time="47m 20s" />
            <RunnerItem position={3} name="Marcos López" time="48m 42s" />
          </CategoryResults>
          
          <CategoryResults categoryName="Categoría Cadete Femenino">
            <RunnerItem position={1} name="Alba Sánchez" time="50m 19s" />
            <RunnerItem position={2} name="Noa Martínez" time="52m 04s" />
            <RunnerItem position={3} name="Lucía Díaz" time="54m 31s" />
          </CategoryResults>
          
          <ResultsLink />
        </ResultsCard>
        
        <!-- Trail Camino de la Cuencha -->
        <ResultsCard title="Trail Camino de la Cuencha">
          <CategoryResults categoryName="Categoría Infantil Masculino">
            <RunnerItem position={1} name="Pablo Hernández" time="22m 18s" />
            <RunnerItem position={2} name="Mario Ruiz" time="23m 40s" />
            <RunnerItem position={3} name="Sergio González" time="24m 15s" />
          </CategoryResults>
          
          <CategoryResults categoryName="Categoría Infantil Femenino">
            <RunnerItem position={1} name="Paula García" time="23m 55s" />
            <RunnerItem position={2} name="Julia Martín" time="25m 10s" />
            <RunnerItem position={3} name="Emma Rodríguez" time="25m 48s" />
          </CategoryResults>
          
          <ResultsLink />
        </ResultsCard>
      </div>
    </article>
  </section>

  <section>
    <SectionTitle 
      title="Galería de fotos 2025"
      subtitle="Revive los mejores momentos de la edición 2025 del Trail Valle de Arbas a través de nuestra galería de fotos."
      className="mt-8"
    />
    
    <article id="galeria" class="pt-10 w-[90%] mx-auto max-w-[1200px]">
      <div class="bg-gray-50 p-8 rounded-lg text-center sm:p-6 xs:p-4">
        <div class="flex flex-col md:flex-row justify-center gap-6 items-center">
          <div class="gallery-album w-full md:w-auto">
            <h3 class="text-xl font-semibold mb-4 text-[#e49a69] sm:text-lg">Álbum Trail Valle de Arbas 2025</h3>
            <p class="mb-4">Todas las fotografías de la edición 2025 del Trail Valle de Arbas.</p>
            <a href="#" class="inline-block px-6 py-3 w-full md:w-auto bg-gradient-to-r from-[#f97316] to-[#e49a69] text-white rounded-lg hover:from-[#e49a69] hover:to-[#f97316] transition-colors focus:outline-none focus:ring-2 focus:ring-[#e49a69]">
              Ver galería completa
            </a>
          </div>
          
          <div class="w-px h-20 bg-gray-300 hidden md:block"></div>
          
          <div class="gallery-social mt-6 md:mt-0 w-full md:w-auto">
            <h3 class="text-xl font-semibold mb-4 text-[#e49a69] sm:text-lg">Comparte tus fotos</h3>
            <p class="mb-4">Comparte tus fotos con el hashtag #TrailValleArbas2025</p>
            <div class="flex justify-center gap-4">
              <a href="#" class="text-[#e49a69] hover:text-[#f97316] transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 sm:w-7 sm:h-7" fill="currentColor" viewBox="0 0 16 16">
                  <path d="M8 0C5.829 0 5.556.01 4.703.048 3.85.088 3.269.222 2.76.42a3.917 3.917 0 0 0-1.417.923A3.927 3.927 0 0 0 .42 2.76C.222 3.268.087 3.85.048 4.7.01 5.555 0 5.827 0 8.001c0 2.172.01 2.444.048 3.297.04.852.174 1.433.372 1.942.205.526.478.972.923 1.417.444.445.89.719 1.416.923.51.198 1.09.333 1.942.372C5.555 15.99 5.827 16 8 16s2.444-.01 3.298-.048c.851-.04 1.434-.174 1.943-.372a3.916 3.916 0 0 0 1.416-.923c.445-.445.718-.891.923-1.417.197-.509.332-1.09.372-1.942C15.99 10.445 16 10.173 16 8s-.01-2.445-.048-3.299c-.04-.851-.175-1.433-.372-1.941a3.926 3.926 0 0 0-.923-1.417A3.911 3.911 0 0 0 13.24.42c-.51-.198-1.092-.333-1.943-.372C10.443.01 10.172 0 7.998 0h.003zm-.717 1.442h.718c2.136 0 2.389.007 3.232.046.78.035 1.204.166 1.486.275.373.145.64.319.92.599.28.28.453.546.598.92.11.281.24.705.275 1.485.039.843.047 1.096.047 3.231s-.008 2.389-.047 3.232c-.035.78-.166 1.203-.275 1.485a2.47 2.47 0 0 1-.599.919c-.28.28-.546.453-.92.598-.28.11-.704.24-1.485.276-.843.038-1.096.047-3.232.047s-2.39-.009-3.233-.047c-.78-.036-1.203-.166-1.485-.276a2.478 2.478 0 0 1-.92-.598 2.48 2.48 0 0 1-.6-.92c-.109-.281-.24-.705-.275-1.485-.038-.843-.046-1.096-.046-3.233 0-2.136.008-2.388.046-3.231.036-.78.166-1.204.276-1.486.145-.373.319-.64.599-.92.28-.28.546-.453.92-.598.282-.11.705-.24 1.485-.276.738-.034 1.024-.044 2.515-.045v.002zm4.988 1.328a.96.96 0 1 0 0 1.92.96.96 0 0 0 0-1.92zm-4.27 1.122a4.109 4.109 0 1 0 0 8.217 4.109 4.109 0 0 0 0-8.217zm0 1.441a2.667 2.667 0 1 1 0 5.334 2.667 2.667 0 0 1 0-5.334z"/>
                </svg>
              </a>
              <a href="#" class="text-[#e49a69] hover:text-[#f97316] transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 sm:w-7 sm:h-7" fill="currentColor" viewBox="0 0 16 16">
                  <path d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z"/>
                </svg>
              </a>
              <a href="#" class="text-[#e49a69] hover:text-[#f97316] transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 sm:w-7 sm:h-7" fill="currentColor" viewBox="0 0 16 16">
                  <path d="M8.051 1.999h.089c.822.003 4.987.033 6.11.335a2.01 2.01 0 0 1 1.415 1.42c.101.38.172.883.22 1.402l.01.104.022.26.008.104c.065.914.073 1.77.074 1.957v.075c-.001.194-.01 1.108-.082 2.06l-.008.105-.009.104c-.05.572-.124 1.14-.235 1.558a2.007 2.007 0 0 1-1.415 1.42c-1.16.312-5.569.334-6.18.335h-.142c-.309 0-1.587-.006-2.927-.052l-.17-.006-.087-.004-.171-.007-.171-.007c-1.11-.049-2.167-.128-2.654-.26a2.007 2.007 0 0 1-1.415-1.419c-.111-.417-.185-.986-.235-1.558L.09 9.82l-.008-.104A31.4 31.4 0 0 1 0 7.68v-.123c.002-.215.01-.958.064-1.778l.007-.103.003-.052.008-.104.022-.26.01-.104c.048-.519.119-1.023.22-1.402a2.007 2.007 0 0 1 1.415-1.42c.487-.13 1.544-.21 2.654-.26l.17-.007.172-.006.086-.003.171-.007A99.788 99.788 0 0 1 7.858 2h.193zM6.4 5.209v4.818l4.157-2.408L6.4 5.209z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </article>
  </section>

  <section>
    <SectionTitle 
      title="Ediciones anteriores"
      subtitle="El Trail Valle de Arbas ha evolucionado a lo largo de sus ediciones, consolidándose como una de las pruebas de referencia en la montaña leonesa."
      className="mt-8"
    />
    
    <article id="historico" class="pt-10 w-[90%] mx-auto max-w-[1200px] mb-20">
      <div class="grid gap-8 md:grid-cols-2">
        <!-- Edición 2024 -->
        <div class="past-edition-card">
          <div class="year-banner">2024</div>
          <h3 class="text-xl font-semibold mb-3 text-[#e49a69]">II Edición</h3>
          <p class="mb-4">Segunda edición con más de 300 participantes y la incorporación del Trail Arbas Infinito.</p>
          
          <div class="winners mb-6">
            <h4 class="font-medium mb-2">Ganadores:</h4>
            <ul class="space-y-1 ml-0">
              <li class="flex items-center gap-2">
                <span class="trophy">🏆</span>
                <span><strong>Trail Infinito Masculino:</strong> Pedro Gómez (3h 10m 22s)</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="trophy">🏆</span>
                <span><strong>Trail Infinito Femenino:</strong> Ana López (3h 45m 12s)</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="trophy">🏆</span>
                <span><strong>Trail Arbas-Luna Masculino:</strong> Fernando Ruiz (1h 23m 45s)</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="trophy">🏆</span>
                <span><strong>Trail Arbas-Luna Femenino:</strong> Ana Díaz (1h 35m 08s)</span>
              </li>
            </ul>
          </div>
          
          <div class="past-edition-links grid grid-cols-2 gap-4">
            <a href="#" class="past-edition-link">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
              <span>Resultados completos</span>
            </a>
            <a href="#" class="past-edition-link">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <span>Galería de fotos</span>
            </a>
          </div>
        </div>
        
        <!-- Edición 2023 -->
        <div class="past-edition-card">
          <div class="year-banner">2023</div>
          <h3 class="text-xl font-semibold mb-3 text-[#e49a69]">I Edición</h3>
          <p class="mb-4">Primera edición con 200 participantes en la única modalidad disponible: Trail Arbas-Luna.</p>
          
          <div class="winners mb-6">
            <h4 class="font-medium mb-2">Ganadores:</h4>
            <ul class="space-y-1 ml-0">
              <li class="flex items-center gap-2">
                <span class="trophy">🏆</span>
                <span><strong>Trail Arbas-Luna Masculino:</strong> Luis Martínez (1h 25m 37s)</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="trophy">🏆</span>
                <span><strong>Trail Arbas-Luna Femenino:</strong> Elena García (1h 40m 08s)</span>
              </li>
            </ul>
          </div>
          
          <div class="past-edition-links grid grid-cols-2 gap-4">
            <a href="#" class="past-edition-link">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
              <span>Resultados completos</span>
            </a>
            <a href="#" class="past-edition-link">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <span>Galería de fotos</span>
            </a>
          </div>
        </div>
      </div>
      
      <CallToAction text="Inscríbete para la próxima edición" />
    </article>
  </section>
</BasePageLayout>


