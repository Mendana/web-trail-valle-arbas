---
import '../styles/global.css';
import '../styles/pastEditions.css';
import BasePageLayout from '../layouts/BasePageLayout.astro';
import ResultsCard from '../components/results/ResultsCard.astro';
import CategoryResults from '../components/results/CategoryResults.astro';
import RunnerItem from '../components/results/RunnerItem.astro';
import RecordBox from '../components/results/RecordBox.astro';
import ResultsLink from '../components/results/ResultsLink.astro';
import CallToAction from '../components/CallToAction.astro';
import SectionTitle from '../components/SectionTitle.astro';
---

<BasePageLayout
  title="Resultados y Fotos"
  description="Resultados, récords y fotos del Trail Valle de Arbas"
  image="HeaderResultados"
  imgTitle="Resultados y Fotos"
>
  <section>
    <SectionTitle
      title="Resultados Edición 2025"
      subtitle="Consulta los resultados completos de la edición 2025 del Trail Valle de Arbas, récords de las diferentes distancias y las galerías fotográficas del evento."
    />

    <article class="pt-10 w-[90%] mx-auto max-w-300">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Trail Arbas Infinito -->
        <ResultsCard title="Trail Arbas Infinito">
          <CategoryResults categoryName="Categoría Masculina">
            <RunnerItem position={1} name="Pablo SANTOS MARTIN" time="3h 06m 24s" />
            <RunnerItem position={2} name="Carlos VELASCO OLMOS" time="3h 10m 44s" />
            <RunnerItem position={3} name="Javier DONAIRE CASTILLO" time="3h 12m 32s" />
          </CategoryResults>

          <CategoryResults categoryName="Categoría Femenina">
            <RunnerItem position={1} name="Itziar GORTAZAR MERAY" time="3h 35m 10s" />
            <RunnerItem position={2} name=" Maria Del Carmen BUENO VILLASUR" time="4h 04m 59s" />
            <RunnerItem position={3} name="Marta CABRERA FERNANDEZ" time="4h 36m 36s" />
          </CategoryResults>

          <RecordBox
            maleRecord={{ name: 'Pablo SANTOS MARTIN', time: '3h 06m 24s', year: '2025' }}
            femaleRecord={{ name: 'Itziar GORTAZAR MERAY', time: '3h 35m 10s', year: '2025' }}
          />

          <ResultsLink
            url="https://youevent.es/sport/multimedia/clasificaciones/ClasificacionTrailValledeArbas2025-4.pdf"
          />
        </ResultsCard>

        <!-- Trail Arbas-Luna -->
        <ResultsCard title="Trail Arbas-Luna">
          <CategoryResults categoryName="Categoría Masculina">
            <RunnerItem position={1} name="Hugo CEREZO BLANCO" time="1h 19m 40s" />
            <RunnerItem position={2} name="Miguel FERNANDEZ FERNANDEZ" time="1h 32m 58s" />
            <RunnerItem position={3} name="Fabio GARCIA-HERAS HERNANDEZ" time="1h 33m 41s" />
          </CategoryResults>

          <CategoryResults categoryName="Categoría Femenina">
            <RunnerItem position={1} name="Maria Dolores OLIVERA CABO" time="1h 50m 24s" />
            <RunnerItem position={2} name="Carmen RODRIGUEZ ALVAREZ" time="1h 54m 06s" />
            <RunnerItem position={3} name="Maria Raquel FERNANDEZ GONZALEZ" time="1h 59m 28s" />
          </CategoryResults>

          <RecordBox
            maleRecord={{ name: 'Hugo CEREZO BLANCO', time: '1h 19m 40s', year: '2025' }}
            femaleRecord={{ name: 'Maria Dolores OLIVERA CABO', time: '1h 50m 08s', year: '2025' }}
          />

          <ResultsLink
            url="https://youevent.es/sport/multimedia/clasificaciones/ClasificacionTrailValledeArbas2025-2.pdf"
          />
        </ResultsCard>
      </div>
    </article>
  </section>

  <section>
    <SectionTitle
      title="Galería de fotos 2025"
      subtitle="Revive los mejores momentos de la edición 2025 del Trail Valle de Arbas a través de nuestra galería de fotos."
      className="mt-8"
    />

    <article id="galeria" class="pt-10 w-[90%] mx-auto max-w-300">
      <div class="bg-gray-50 p-8 rounded-lg text-center sm:p-6 xs:p-4">
        <div class="flex flex-col md:flex-row justify-center gap-6 items-center">
          <div class="gallery-album w-full md:w-auto">
            <h3 class="text-xl font-semibold mb-4 text-[#e49a69] sm:text-lg">
              Álbum Trail Valle de Arbas 2025
            </h3>
            <p class="mb-4">Todas las fotografías de la edición 2025 del Trail Valle de Arbas.</p>
            <a
              href="https://photos.google.com/share/AF1QipMFYlZBZO_WB5_xZ7myO3gv1oCftHZsKznnGBy4taS41W2aboaXPWNNwjdCiL77vQ?fbclid=PAQ0xDSwKdc0xleHRuA2FlbQIxMAABp9MEv2ecVCYAQWB2S3kz6cqesLbXBODaCkb9bykRT9Qzy6vtn73ScvEOhLob_aem_4A4CZtrff0E0ZXZz9eg5eg&key=UTBEX0VfZVUxTkFjMC1ISVJLaGxqaWdNQkhvMXRR"
              class="inline-block px-6 py-3 w-full md:w-auto bg-linear-to-r from-[#f97316] to-[#e49a69] text-white rounded-lg hover:from-[#e49a69] hover:to-[#f97316] transition-colors focus:outline-none focus:ring-2 focus:ring-[#e49a69]"
              target="_blank"
              rel="noopener noreferrer"
            >
              Ver galería completa
            </a>
          </div>

          <div class="w-px h-20 bg-gray-300 hidden md:block"></div>

          <div class="gallery-social mt-6 md:mt-0 w-full md:w-auto">
            <h3 class="text-xl font-semibold mb-4 text-[#e49a69] sm:text-lg">Comparte tus fotos</h3>
            <p class="mb-4">Comparte tus fotos con el hashtag #TrailValleArbas2025</p>
            <div class="flex justify-center">
              <div class="w-10 h-10 flex pt-0.5">
                <a
                  href="https://www.instagram.com/trailvalledearbas/"
                  class="text-[#e49a69] hover:text-[#f97316] transition-colors"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="w-8 h-8 sm:w-7 sm:h-7"
                    fill="currentColor"
                    viewBox="0 0 16 16"
                  >
                    <path
                      d="M8 0C5.829 0 5.556.01 4.703.048 3.85.088 3.269.222 2.76.42a3.917 3.917 0 0 0-1.417.923A3.927 3.927 0 0 0 .42 2.76C.222 3.268.087 3.85.048 4.7.01 5.555 0 5.827 0 8.001c0 2.172.01 2.444.048 3.297.04.852.174 1.433.372 1.942.205.526.478.972.923 1.417.444.445.89.719 1.416.923.51.198 1.09.333 1.942.372C5.555 15.99 5.827 16 8 16s2.444-.01 3.298-.048c.851-.04 1.434-.174 1.943-.372a3.916 3.916 0 0 0 1.416-.923c.445-.445.718-.891.923-1.417.197-.509.332-1.09.372-1.942C15.99 10.445 16 10.173 16 8s-.01-2.445-.048-3.299c-.04-.851-.175-1.433-.372-1.941a3.926 3.926 0 0 0-.923-1.417A3.911 3.911 0 0 0 13.24.42c-.51-.198-1.092-.333-1.943-.372C10.443.01 10.172 0 7.998 0h.003zm-.717 1.442h.718c2.136 0 2.389.007 3.232.046.78.035 1.204.166 1.486.275.373.145.64.319.92.599.28.28.453.546.598.92.11.281.24.705.275 1.485.039.843.047 1.096.047 3.231s-.008 2.389-.047 3.232c-.035.78-.166 1.203-.275 1.485a2.47 2.47 0 0 1-.599.919c-.28.28-.546.453-.92.598-.28.11-.704.24-1.485.276-.843.038-1.096.047-3.232.047s-2.39-.009-3.233-.047c-.78-.036-1.203-.166-1.485-.276a2.478 2.478 0 0 1-.92-.598 2.48 2.48 0 0 1-.6-.92c-.109-.281-.24-.705-.275-1.485-.038-.843-.046-1.096-.046-3.233 0-2.136.008-2.388.046-3.231.036-.78.166-1.204.276-1.486.145-.373.319-.64.599-.92.28-.28.546-.453.92-.598.282-.11.705-.24 1.485-.276.738-.034 1.024-.044 2.515-.045v.002zm4.988 1.328a.96.96 0 1 0 0 1.92.96.96 0 0 0 0-1.92zm-4.27 1.122a4.109 4.109 0 1 0 0 8.217 4.109 4.109 0 0 0 0-8.217zm0 1.441a2.667 2.667 0 1 1 0 5.334 2.667 2.667 0 0 1 0-5.334z"
                    ></path>
                  </svg>
                </a>
              </div>
              <div class="w-10 h-10 flex items-start justify-start">
                <a
                  href="https://www.facebook.com/p/Trail-Valle-de-Arbas-61556410179824"
                  class="text-[#e49a69] hover:text-[#f97316] transition-colors"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="w-8 h-8 sm:w-7 sm:h-7"
                    fill="currentColor"
                    viewBox="0 0 16 16"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M13.135 6H15V3h-1.865a4.147 4.147 0 0 0-4.142 4.142V9H7v3h2v9.938h3V12h2.021l.592-3H12V6.591A.6.6 0 0 1 12.592 6h.543Z"
                      clip-rule="evenodd"></path>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </article>
  </section>

  <section>
    <SectionTitle
      title="Ediciones anteriores"
      subtitle="El Trail Valle de Arbas ha evolucionado a lo largo de sus ediciones, ofreciendo cada año nuevas experiencias y desafíos para los corredores."
      className="mt-8"
    />
    <article class="pt-10 w-[90%] mx-auto max-w-300 mb-20">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-12">
        <!-- Resultados 2024 -->
        <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow">
          <h3 class="text-2xl font-bold mb-4 text-[#e49a69]">Resultados 2024</h3>
          <p class="text-gray-700 mb-4">
            Consulta la clasificación completa de la edición 2024 del Trail Valle de Arbas.
          </p>
          <a
            href="https://youevent.es/sport/multimedia/clasificaciones/ClasificacionTrailValledeArbas2024-0.pdf"
            class="inline-block px-6 py-3 bg-linear-to-r from-[#f97316] to-[#e49a69] text-white rounded-lg hover:from-[#e49a69] hover:to-[#f97316] transition-colors focus:outline-none focus:ring-2 focus:ring-[#e49a69]"
            target="_blank"
            rel="noopener noreferrer"
          >
            Ver resultados 2024
          </a>
        </div>

        <!-- Galería 2024 -->
        <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow">
          <h3 class="text-2xl font-bold mb-4 text-[#e49a69]">Galería de fotos 2024</h3>
          <p class="text-gray-700 mb-4">
            Revive los mejores momentos de la edición 2024 a través de nuestra galería fotográfica.
          </p>
          <a
            href="https://photos.google.com/share/AF1QipM5cSlw2TSEkijD7C9wtsv7o27eRrPlia5F3ZXBin0vDp13Sp9ws0QtcHAGrHtMsw?key=RGlSM3NzLUxSNjk5VEZ0VVoyd1cwZk1PSDNrTGx3"
            class="inline-block px-6 py-3 bg-linear-to-r from-[#f97316] to-[#e49a69] text-white rounded-lg hover:from-[#e49a69] hover:to-[#f97316] transition-colors focus:outline-none focus:ring-2 focus:ring-[#e49a69]"
            target="_blank"
            rel="noopener noreferrer"
          >
            Ver galería 2024
          </a>
        </div>
      </div>

      <CallToAction text="Inscríbete para la próxima edición" />
    </article>
  </section>
</BasePageLayout>
