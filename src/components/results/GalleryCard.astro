---
interface Props {
  title: string;
  description: string;
  url?: string;
}

const { title, description, url = "#" } = Astro.props;
---

<div class="gallery-card">
  <h3 class="text-lg font-semibold mb-3 text-[#e49a69]">{title}</h3>
  <p class="mb-4">{description}</p>
  <a href={url} class="gallery-link">
    <span>Ver galer√≠a</span>
    <svg class="w-5 h-5 ml-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 12H5m14 0-4-4m4 4-4 4"/>
    </svg>
  </a>
</div>

<style>
  .gallery-card {
    background-color: rgba(250, 250, 250, 0.7);
    padding: 1.5rem;
    border-radius: 0.75rem;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.05);
  }
  
  .gallery-link {
    display: inline-flex;
    align-items: center;
    color: #e49a69;
    font-weight: 500;
    transition: all 0.2s;
  }
  
  .gallery-link:hover {
    color: #f97316;
  }
  
  @media (max-width: 480px) {
    .gallery-card {
      padding: 1.25rem;
    }
    
    .gallery-link {
      width: 100%;
      justify-content: center;
      padding: 0.5rem;
      border: 1px solid #e49a69;
      border-radius: 0.5rem;
    }
    
    .gallery-link:hover {
      background-color: #e49a69;
      color: white;
    }
  }
</style>
