---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="results-card">
  <h3 class="text-xl font-semibold mb-4 lg:text-2xl text-[#e49a69]">{title}</h3>
  <slot />
</div>

<style>
  .results-card {
    background-color: rgba(250, 250, 250, 0.7);
    padding: 1.5rem;
    border-radius: 0.75rem;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.05);
    border-top: 4px solid #e49a69;
  }
</style>
