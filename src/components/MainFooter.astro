<style>
  .list-item {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 12px;
    transition: all 0.2s ease;
  }

  .list-item:hover span {
    color: #e49a69;
  }

  .copy-section {
    border-top: 1px solid rgba(245, 245, 245, 0.2);
    margin: 0 30px;
  }

  .footer-link {
    color: #f5f5f6;
    transition: color 0.2s ease;
    display: inline-block;
    position: relative;
    padding-left: 15px;
  }

  .footer-link::before {
    content: '›';
    position: absolute;
    left: 0;
    color: #e49a69;
    font-weight: bold;
  }

  .footer-link:hover {
    color: #e49a69;
    transform: translateX(2px);
  }

  .social-icon-link {
    transition: transform 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .social-icon-link:hover {
    transform: translateY(-3px);
  }

  #my-link {
    color: #e49a69;
    text-decoration: underline;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  #my-link:hover {
    color: #f97316;
  }

  @media (max-width: 768px) {
    .copy-section {
      margin: 0 15px;
    }
  }
</style>
