---
const { title, description, cardTitle, cardDescription, cardIcon, cardLink } = Astro.props;
import HugeInfoField from '../fields/HugeInfoField.astro';
---

<section class="mb-20">
  <div class="title-center">
    <h2 class="text-2xl font-bold title-underline mt-8 mb-4">{title}</h2>
  </div>
  <p class="text-center text-base w-[90%] mx-auto">
    {description}
  </p>

  <HugeInfoField icon={cardIcon} title={cardTitle} description={cardDescription} link={cardLink} />
</section>

<style>
  .title-underline {
    position: relative;
    display: inline-block;
    width: fit-content;
    margin: 20px auto;
  }
  .title-center {
    display: flex;
    justify-content: center;
    width: 100%;
  }
  .title-underline::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, #f97316, #f4bb76, #f97316);
    border-radius: 3px;
  }
</style>
