---
const { name, description, distance, uphill, link } = Astro.props;
---
<div class="main-container distance-card">
  <h3 class="distance-title text-xl">{name}</h3>
  <p class="distance-description text-base">{description}</p>
  <div class="distance-bottom">
    <div class="distance-item">
      <svg viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg" stroke-width="3" stroke="#e49a69" fill="none" class="w-8"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"><path d="M17.94,54.81a.1.1,0,0,1-.14,0c-1-1.11-11.69-13.23-11.69-21.26,0-9.94,6.5-12.24,11.76-12.24,4.84,0,11.06,2.6,11.06,12.24C28.93,41.84,18.87,53.72,17.94,54.81Z"></path><circle cx="17.52" cy="31.38" r="4.75"></circle><path d="M49.58,34.77a.11.11,0,0,1-.15,0c-.87-1-9.19-10.45-9.19-16.74,0-7.84,5.12-9.65,9.27-9.65,3.81,0,8.71,2,8.71,9.65C58.22,24.52,50.4,33.81,49.58,34.77Z"></path><circle cx="49.23" cy="17.32" r="3.75"></circle><path d="M17.87,54.89a28.73,28.73,0,0,0,3.9.89"></path><path d="M24.68,56.07c2.79.12,5.85-.28,7.9-2.08,5.8-5.09,2.89-11.25,6.75-14.71a16.72,16.72,0,0,1,4.93-3" stroke-dasharray="7.8 2.92"></path><path d="M45.63,35.8a23,23,0,0,1,3.88-.95"></path></g></svg>
      <span class="distance-label">{distance} km</span>
    </div>
    <div class="distance-item">
      <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-8"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path d="M13 14L17 9L22 18H2.84444C2.46441 18 2.2233 17.5928 2.40603 17.2596L10.0509 3.31896C10.2429 2.96885 10.7476 2.97394 10.9325 3.32786L15.122 11.3476" stroke="#e49a69" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path> </g></svg>
      <span class="distance-label">{uphill} m+</span>
    </div>
  </div>
  <a href={`categorias#${link}`} class="button-link">
    <button
      class="px-6 py-2 bg-[#e49a69] text-sm text-white rounded hover:bg-[#d88b5c] transition-colors focus:ring-2 focus:ring-[#e49a69] focus:ring-opacity-50 cursor-pointer"
    >
      Más información
    </button>
  </a>
</div>

<style>
.main-container.distance-card {
  margin: 20px auto;
  width: 80%;
  max-width: 600px;
  padding: 20px;
  background-color: #f8f8f8;
  border-radius: 16px;
  box-shadow: 0 4px 16px rgba(228, 154, 105, 0.10);
  text-align: center;
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  gap: 1rem;
}
.main-container.distance-card:hover {
  background-color: #f0f0f0;
  box-shadow: 0 8px 32px rgba(228, 154, 105, 0.18);
  transform: translateY(-2px);
}
.distance-title {
  font-weight: 700;
  color: #e49a69;
  margin: 0;
  text-align: center;
}
.distance-description {
  color: #444;
  margin: 0;
  text-align: center;
}
.distance-bottom {
  display: flex;
  flex-direction: row;
  gap: 2rem;
  align-items: center;
  justify-content: center;
}
.distance-item {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 1.1rem;
  color: #e49a69;
  font-weight: 500;
}
.distance-label {
  color: #e49a69;
  font-size: 1.1rem;
  font-weight: 500;
}
.button-link {
  display: inline-block;
  text-decoration: none;
  color: inherit;
}
button {
  position: relative;
  overflow: hidden;
  font-weight: 500;
  transition: all 0.3s ease;
}
button:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}
button:active {
  transform: translateY(0);
}
@media (max-width: 600px) {
  .main-container.distance-card {
    padding: 1.2rem 0.7rem;
    max-width: 100%;
  }
  .distance-label {
    font-size: 1rem;
  }
  .distance-bottom {
    gap: 1rem;
  }
}
</style>

