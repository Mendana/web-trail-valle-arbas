---
interface Props {
  title: string;
  subtitle?: string;
  className?: string;
}

const { title, subtitle, className = "" } = Astro.props;
---

<div class={`title-center pt-4 ${className} flex flex-col items-center mx-auto max-w-300 reveal-element`}>
  <h2 class="text-2xl lg:text-3xl sm:text-xl font-bold mt-8 mb-4">{title}</h2>
  <div class="expanding-line mt-2 mb-6"></div>
  {subtitle && (
    <p class="info-text text-center px-4 max-w-300 text-base md:text-lg lg:text-xl fade-in-up wrap-break-word" set:html={subtitle}>
    </p>
  )}
</div>


<style>
  @media (max-width: 480px) {
    .title-center h2 {
      font-size: 1.25rem;
    }
    
    .title-center .info-text {
      width: 90%;
      font-size: 0.9rem;
    }
  }
</style>
