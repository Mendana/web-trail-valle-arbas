---
export interface Sponsor {
  name: string;
  logo: string; // Ruta a la imagen del logo
  url?: string;
  level?: string;
}

interface Props {
  sponsors: Sponsor[];
}

const { sponsors } = Astro.props;

// Separar patrocinadores por nivel
const mainSponsors = sponsors.filter(s => s.level === 'principal');
const collaborators = sponsors.filter(s => !s.level || s.level !== 'principal');
---

<div class="sponsors-container">
  {mainSponsors.length > 0 && (
    <div class="main-sponsors-section">
      <h3 class="sponsor-section-title">
        <span class="title-gradient">Patrocinadores Principales</span>
      </h3>
      <div class="main-sponsor-grid">
        {mainSponsors.map(sponsor => (
          <div class="main-sponsor-card">
            <div class="main-sponsor-image-container">
              {sponsor.url ? (
                <a href={sponsor.url} target="_blank" rel="noopener noreferrer" class="sponsor-link">
                  <img src={sponsor.logo} alt={`Logo de ${sponsor.name}`} class="sponsor-logo" />
                </a>
              ) : (
                <img src={sponsor.logo} alt={`Logo de ${sponsor.name}`} class="sponsor-logo" />
              )}
            </div>
            <p class="main-sponsor-name">{sponsor.name}</p>
          </div>
        ))}
      </div>
    </div>
  )}

  {collaborators.length > 0 && (
    <div class="collaborators-section">
      <h3 class="sponsor-section-title">
        <span class="title-gradient">Colaboradores</span>
      </h3>
      <div class="sponsor-grid">
        {collaborators.map(sponsor => (
          <div class="sponsor-card">
            <div class="sponsor-image-container">
              {sponsor.url ? (
                <a href={sponsor.url} target="_blank" rel="noopener noreferrer" class="sponsor-link">
                  <img src={sponsor.logo} alt={`Logo de ${sponsor.name}`} class="sponsor-logo" />
                </a>
              ) : (
                <img src={sponsor.logo} alt={`Logo de ${sponsor.name}`} class="sponsor-logo" />
              )}
            </div>
            <p class="sponsor-name">{sponsor.name}</p>
          </div>
        ))}
      </div>
    </div>
  )}
</div>

<style>
  .sponsors-container {
    width: 95%;
    max-width: 1200px;
    margin: 0 auto;
  }

  .main-sponsors-section,
  .collaborators-section {
    margin-bottom: 3rem;
  }

  .sponsor-section-title {
    text-align: center;
    font-size: 1.75rem;
    font-weight: 600;
    margin-bottom: 2rem;
  }

  .title-gradient {
    background: linear-gradient(270deg, #f96742, #e49a69, #f96742);
    background-size: 400% 400%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradient-move 6s linear infinite;
  }

  /* Patrocinadores Principales - Más grandes */
  .main-sponsor-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
    justify-content: center;
  }

  .main-sponsor-card {
    background: linear-gradient(135deg, #ffffff 0%, #f9fafb 100%);
    border-radius: 1rem;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
    padding: 2rem;
    text-align: center;
    transition: all 0.4s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 100%;
    border: 2px solid rgba(249, 103, 66, 0.15);
    position: relative;
    overflow: hidden;
  }

  .main-sponsor-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #f97316, #e49a69);
  }

  .main-sponsor-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 8px 25px rgba(249, 103, 66, 0.2);
    border-color: rgba(249, 103, 66, 0.3);
  }

  .main-sponsor-image-container {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 180px;
    width: 100%;
    margin-bottom: 1.25rem;
  }

  .main-sponsor-name {
    font-size: 1.125rem;
    font-weight: 600;
    color: #333;
    margin-top: auto;
  }

  /* Colaboradores - Más pequeños */
  .sponsor-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
    gap: 1.25rem;
    justify-content: center;
  }

  .sponsor-card {
    background-color: white;
    border-radius: 0.75rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    padding: 1.25rem;
    text-align: center;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 100%;
    border: 1px solid rgba(0, 0, 0, 0.05);
  }

  .sponsor-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }

  .sponsor-image-container {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100px;
    width: 100%;
    margin-bottom: 0.75rem;
  }

  .sponsor-logo {
    max-width: 100%;
    height: auto;
    max-height: 100%;
    object-fit: contain;
    filter: grayscale(15%);
    transition: filter 0.3s ease;
  }

  .main-sponsor-card:hover .sponsor-logo,
  .sponsor-card:hover .sponsor-logo {
    filter: grayscale(0%);
  }

  .sponsor-name {
    font-size: 0.875rem;
    font-weight: 500;
    color: #555;
    margin-top: auto;
  }

  .sponsor-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
  }

  @keyframes gradient-move {
    0% {
      background-position: 0% 50%;
    }
    100% {
      background-position: 200% 50%;
    }
  }

  @media (max-width: 768px) {
    .main-sponsor-grid {
      grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
      gap: 1.5rem;
    }

    .sponsor-grid {
      grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
    }

    .sponsor-section-title {
      font-size: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .main-sponsor-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .main-sponsor-card {
      padding: 1.5rem;
    }

    .main-sponsor-image-container {
      height: 130px;
    }

    .sponsor-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .sponsor-card {
      padding: 1rem;
    }

    .sponsor-image-container {
      height: 80px;
    }
    
    .sponsor-name {
      font-size: 0.8rem;
    }

    .main-sponsor-name {
      font-size: 1rem;
    }

    .sponsor-section-title {
      font-size: 1.25rem;
    }
  }
</style>
