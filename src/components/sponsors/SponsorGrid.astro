---
export interface Sponsor {
  name: string;
  logo: string; // Ruta a la imagen del logo
  url?: string;
  level?: string; // Ya no se usa, pero lo mantenemos para compatibilidad
}

interface Props {
  sponsors: Sponsor[];
}

const { sponsors } = Astro.props;
---

<div class="sponsors-container">
  <div class="sponsor-grid">
    {sponsors.map(sponsor => (
      <div class="sponsor-card">
        <div class="sponsor-image-container">
          {sponsor.url ? (
            <a href={sponsor.url} target="_blank" rel="noopener noreferrer" class="sponsor-link">
              <img src={sponsor.logo} alt={`Logo de ${sponsor.name}`} class="sponsor-logo" />
            </a>
          ) : (
            <img src={sponsor.logo} alt={`Logo de ${sponsor.name}`} class="sponsor-logo" />
          )}
        </div>
        <p class="sponsor-name">{sponsor.name}</p>
      </div>
    ))}
  </div>
</div>

<style>
  .sponsors-container {
    width: 95%;
    max-width: 1200px;
    margin: 0 auto;
  }

  .sponsor-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1.5rem;
    justify-content: center;
  }

  .sponsor-card {
    background-color: white;
    border-radius: 0.75rem;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.06);
    padding: 1.5rem;
    text-align: center;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 100%;
    border: 1px solid rgba(0, 0, 0, 0.05);
  }

  .sponsor-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }

  .sponsor-image-container {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 120px;
    width: 100%;
    margin-bottom: 1rem;
  }

  .sponsor-logo {
    max-width: 100%;
    height: auto;
    max-height: 100%;
    object-fit: contain;
    filter: grayscale(15%);
    transition: filter 0.3s ease;
  }

  .sponsor-card:hover .sponsor-logo {
    filter: grayscale(0%);
  }

  .sponsor-name {
    font-size: 1rem;
    font-weight: 500;
    color: #444;
    margin-top: auto;
  }

  .sponsor-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
  }

  @media (max-width: 768px) {
    .sponsor-grid {
      grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    }
  }

  @media (max-width: 480px) {
    .sponsor-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .sponsor-card {
      padding: 1rem;
    }

    .sponsor-image-container {
      height: 100px;
    }
    
    .sponsor-name {
      font-size: 0.9rem;
    }
  }
</style>
