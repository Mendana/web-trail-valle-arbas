---
interface Props {
  time: string;
  title: string;
  description?: string;
}

const { time, title, description } = Astro.props;
---

<div class="schedule-item">
  <div class="time-slot">{time}</div>
  <div class="schedule-content">
    <h4>{title}</h4>
    {description && <p>{description}</p>}
  </div>
</div>

<style>
  .schedule-item {
    display: flex;
    margin-bottom: 1.5rem;
    position: relative;
  }
  
  .schedule-item:not(:last-child)::after {
    content: '';
    position: absolute;
    left: 4.5rem;
    top: 2.5rem;
    bottom: -1rem;
    width: 2px;
    background: linear-gradient(180deg, #e49a69 0%, rgba(228, 154, 105, 0.2) 100%);
  }
  
  .time-slot {
    width: 9rem;
    min-width: 9rem;
    font-weight: 600;
    color: #e49a69;
    padding-top: 0.25rem;
  }
  
  .schedule-content {
    flex: 1;
    background-color: rgba(245, 245, 245, 0.5);
    padding: 1rem;
    border-radius: 0.5rem;
    border-left: 3px solid #e49a69;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
  }
  
  .schedule-content h4 {
    font-weight: 600;
    margin-bottom: 0.25rem;
    color: #333;
  }
  
  .schedule-content p {
    font-size: 0.95rem;
    color: #555;
    margin: 0;
  }

  @media (max-width: 640px) {
    .schedule-item {
      flex-direction: column;
    }
    
    .schedule-item:not(:last-child)::after {
      display: none;
    }
    
    .time-slot {
      width: 100%;
      margin-bottom: 0.5rem;
    }
    
    .schedule-content {
      width: 100%;
    }
  }

  @media (max-width: 480px) {
    .time-slot {
      font-size: 0.9rem;
    }

    .schedule-content {
      padding: 0.75rem;
    }

    .schedule-content h4 {
      font-size: 0.95rem;
    }

    .schedule-content p {
      font-size: 0.85rem;
    }
  }
</style>
