---
interface Props {
  dayTitle: string;
}

const { dayTitle } = Astro.props;
---

<div>
  <h3 class="text-xl font-semibold mt-4 mb-4 lg:mt-8 lg:text-2xl text-[#e49a69]">{dayTitle}</h3>
  
  <div class="schedule-container">
    <slot />
  </div>
</div>

<style>
  .schedule-container {
    margin-top: 1.5rem;
  }
  
  @media (max-width: 640px) {
    h3 {
      font-size: 1.25rem;
      margin-top: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    h3 {
      font-size: 1.125rem;
    }
  }
</style>
